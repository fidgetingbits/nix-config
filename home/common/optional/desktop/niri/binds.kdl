gestures {
    hot-corners {
        off
    }
}
binds {
	// Show a list of important bindings.
	Super+Slash { show-hotkey-overlay; }

    // logout menu
    Super+E   { spawn "wlogout"; }

    //
    // ========== Overview mode ==========
    //
	Super+O repeat=false { toggle-overview; }

    //
    // ========== Monitor actions ==========
    //

	Super+Ctrl+h { focus-monitor-left; }
	Super+Ctrl+j { focus-monitor-down; }
	Super+Ctrl+k { focus-monitor-up; }
	Super+Ctrl+l { focus-monitor-right; }

    //
    // ========== Workspace actions ==========
    //

    // ========== Focus workspace ==========
	Super+1 { focus-workspace "1_dev"; }
	Super+2 { focus-workspace "2_web"; }
	Super+3 { focus-workspace 3; }
	Super+4 { focus-workspace 4; }
	Super+5 { focus-workspace 5; }
	Super+6 { focus-workspace 6; }
	Super+7 { focus-workspace 7; }
	Super+8 { focus-workspace 8; }
	Super+9 { focus-workspace 9; }
	Super+0 { focus-workspace 0; }
	Super+Y { focus-workspace "Y_qrs"; }

    Super+Minus { focus-workspace-previous; }
    Super+Comma { focus-workspace-up; }
    Super+Period { focus-workspace-down; }

    // ==========  Move workspace ==========
    Super+Shift+Comma { move-workspace-up; }
    Super+Shift+Period { move-workspace-down; }

    //
    // ========== Window and column actions ==========
    //

	Super+Shift+Q { close-window; }

    // ========== Focus windows/columns ==========
	Super+Z { switch-focus-between-floating-and-tiling; }

	Super+H { focus-column-or-monitor-left; }
	Super+J { focus-window-or-workspace-down; }
	Super+K { focus-window-or-workspace-up; }
	Super+L { focus-column-or-monitor-right; }
    // FIXME: Change
	Super+Home { focus-column-first; }
	Super+End { focus-column-last; }

	Super+C { center-column; } // Center current column on screen
	Super+Ctrl+C { center-visible-columns; } // Center all fully visible columns on screen

    // ========== Move windows/columns ==========
	Super+Shift+1 { move-window-to-workspace "1_dev"; }
	Super+Shift+2 { move-window-to-workspace "2_web"; }
	Super+Shift+3 { move-window-to-workspace 3; }
	Super+Shift+4 { move-window-to-workspace 4; }
	Super+Shift+5 { move-window-to-workspace 5; }
	Super+Shift+6 { move-window-to-workspace 6; }
	Super+Shift+7 { move-window-to-workspace 7; }
	Super+Shift+8 { move-window-to-workspace 8; }
	Super+Shift+9 { move-window-to-workspace 9; }
	Super+Shift+0 { move-window-to-workspace 0; }
	Super+Shift+Y { move-window-to-workspace "Y_qrs"; }

	Super+Shift+H { move-column-left; }
	Super+Shift+J { move-window-down; }
	Super+Shift+k { move-window-up; }
	Super+Shift+L { move-column-right; }

	Super+Semicolon { consume-or-expel-window-left; }
	Super+Apostrophe { consume-or-expel-window-right; }

	Super+Shift+Home  { move-column-to-first; }
	Super+Shift+End   { move-column-to-last; }

	Super+Ctrl+Shift+H { move-window-to-monitor-left; }
	Super+Ctrl+Shift+J { move-window-to-monitor-down; }
	Super+Ctrl+Shift+K { move-window-to-monitor-up; }
	Super+Ctrl+Shift+L { move-window-to-monitor-right; }

    // ========== Window Tabs ==========
    // Use `consume-or-expel-...` binds above to add/remove windows to a tabbed column
	Super+G { toggle-column-tabbed-display; } // Toggle the focused column between normal and tabbed display

    //
    // ========== Window and column size ==========
    //

	Super+R { switch-preset-column-width; } // Presets are defined in rules.kdl
    Super+Shift+R { switch-preset-window-height; } // Presets are defined in rules.kdl

	Super+F { fullscreen-window; }
	Super+Alt+F { toggle-windowed-fullscreen; } //tricks the window content into thinking its fullscreen
	Super+Shift+F { toggle-window-floating; }

	Super+Ctrl+F { maximize-column; } // Toggle maximized state of the focused column
	Super+Shift+Ctrl+F { expand-column-to-available-width; } // Expand the focused column to space not taken up by other fully visible columns

    # FIXME: Revisit these
	Super+BracketLeft { set-column-width "-1"; }
	Super+BracketRight  { set-column-width "+1"; }
	Super+Shift+Equal { set-window-height "-1"; }
	Super+Plus  { set-window-height "+1"; }

    //
    // ========== System controls ==========
    //

    // ========== Brightness ==========
	XF86MonBrightnessUp   allow-when-locked=true { spawn "brightnessctl" "set" "10%+"; }
	XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "10%-"; }

    // ========== Media Control==========
	XF86AudioPlay    allow-when-locked=true { spawn "playerctl" "play-pause" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioStop    allow-when-locked=true { spawn "playerctl" "stop" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioPrev    allow-when-locked=true { spawn "playerctl" "previous" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioNext    allow-when-locked=true { spawn "playerctl" "next" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioRewind  allow-when-locked=true { spawn "playerctl" "position" "2-" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioForward allow-when-locked=true { spawn "playerctl" "position" "2+" "--ignore-player=firefox,chromium,brave"; }

    // ========== Media audio control==========
	Shift+XF86AudioRaiseVolume allow-when-locked=true { spawn "playerctl" "volume" "0.05%+"; }
	Shift+XF86AudioLowerVolume allow-when-locked=true { spawn "playerctl" "volume" "0.05%-"; }

    // ========== Output audio control==========
	XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.05+"; }
	XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.05-"; }
	XF86AudioMute        allow-when-locked=true { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SINK@" "toggle"; }

    // ========== Input audio control==========
	Super+XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SOURCE@" "0.05+"; }
	Super+XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SOURCE@" "0.05-"; }
	Super+XF86AudioMute        allow-when-locked=true { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
	XF86AudioMicMute           allow-when-locked=true { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SOURCE@" "toggle"; }

    // ========== Power menu ==========
    // FIXME(niri): probably disable interrupting power?
	// XF86PowerOff allow-when-locked=true { spawn "wlogout"; }
	// XF86Sleep    allow-when-locked=true { spawn "wlogout"; }
	// XF86Suspend  allow-when-locked=true { spawn "wlogout"; }

    //
    // ========== Screenshots ==========
    //

    // NOTE: see config.kdl for screenshot-path
    Print { screenshot; }
    Super+Shift+P { screenshot; }
    // Super+Ctrl+Shift+P { screenshot write-to-disk=true; }
    // Super+Alt+P { screenshot show-pointer=false; }
    // Super+Ctrl+Alt+P { screenshot show-pointer=true; }

    //
    // ========== Quick Launch ==========
    //
	// Open a terminal emulator.
    //FIXME(niri): hardcoding
	Super+Return { spawn "ghostty"; }
	// Open drun launcher.
	Super+Space { spawn "rofi" "-show" "drun"; }
	// Open run/program launcher.
	Super+Shift+Space { spawn "rofi" "-show" "run"; }
	// Show ssh launcher.
	Super+Shift+S { spawn "rofi" "-show" "ssh"; }
	// Show window selector.
	Super+Tab { spawn "rofi" "-show" "window"; }
    // Thunar
	Super+Ctrl+O { spawn "thunar"; }

    //
    // ========== Clipboard ==========
    //
    // FIXME(niri): setup with copyq
	// Select from the clipboard.
	//Super+Shift+V { spawn "dash" "-c" "clipman pick -t CUSTOM -T 'fuzzel -d --no-icons --width 60'"; }
	// Clear the clipboard.
	//Super+Ctrl+V { spawn "dash" "-c" "clipman clear --all && dunstify 'Clipboard cleared.'"; }
	// Opan a permanent "clipboard" file.
	//Alt+Shift+V { spawn "dash" "-c" "$TERMINAL -e micro $HOME/Documents/Clipboard.txt"; }

	// Applications such as remote-desktop clients and software KVM switches may
	// request that niri stops processing the keyboard shortcuts defined here
	// so they may, for example, forward the key presses as-is to a remote machine.
	// It's a good idea to bind an escape hatch to toggle the inhibitor,
	// so a buggy application can't hold your session hostage.
	//
	// The allow-inhibiting=false property can be applied to other binds as well,
	// which ensures niri always processes them, even when an inhibitor is active.
	// Super+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
}
